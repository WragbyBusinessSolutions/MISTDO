@model List<Training>
@{
    ViewData["Title"] = "Training Accounts";
    Layout = "_LayoutAdminDash";
}

@inject UserManager<TraineeApplicationUser> userManager;



<!-- Page Container START -->
<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderAdmin");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            @{

                var user = await userManager.GetUserAsync(User);
                var module = ViewBag.modulecosts as List<Modules>;





            }
            <div class="page-title">
                <h4>Cost Account of Trainings</h4>
                <p><h4>Total Payment Made by All Training Center : <b style="color:green"> &nbsp;@ViewBag.totalcost</b></h4>  </p>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="dt-responsive table-responsive">
                                <table id="footer-select" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>
                                                Trainee ID
                                            </th>
                                            <th>
                                                Training Name
                                            </th>
                                            <th>
                                                Training Center ID
                                            </th>
                                            <th>
                                                Certificate ID
                                            </th>
                                            <th>
                                                Date Registered
                                            </th>
                                            <th>
                                                Training Cost
                                            </th>

                                            <th hidden>Other Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count(); i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Model[i].TraineeId
                                                </td>
                                                <td>
                                                    @Model[i].TrainingName
                                                </td>
                                                <th>
                                                    @Model[i].TrainingCentreId
                                                </th>
                                                <th>
                                                    @Model[i].CertificateId
                                                </th>
                                                <td>
                                                    @Model[i].DateCreated
                                                </td>
                                                <td>

                                                    @module[i].Cost

                                                </td>

                                                <td>
                                                  
                                                      

                                                        <a asp-action="DetailsTrainees" asp-route-id="@Model[i].TraineeId">Details</a>
                                                 
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                Trainee ID
                                            </th>
                                            <th>
                                                Training Name
                                            </th>
                                            <th>
                                                Training Center ID
                                            </th>
                                            <th>
                                                Certificate ID
                                            </th>
                                            <th>
                                                Date Registered
                                            </th>
                                            <th>
                                                Training Cost
                                            </th>

                                            <th hidden>Other Options</th>
                                        </tr>
                                    </tfoot>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
