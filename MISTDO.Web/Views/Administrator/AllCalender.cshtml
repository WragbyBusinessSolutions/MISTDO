@model IEnumerable<MISTDO.Web.Models.Calender>

@{
    ViewData["Title"] = "Training";
    Layout = "_LayoutAdminDash";
}
@inject UserManager<ApplicationUser> userManager;

<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />

<!-- Page Container START -->

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderAdmin");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">

       


        <div class="container-fluid">
            <div class="page-title">
                <h4>Trainings Calender</h4>
                <p>


                    <span style="float:right;"><a asp-action="ExportTrainings" align="right" title="Export Approved Training Providers to Microsoft Excel file"><i> Export All Trainings via Excel</i></a></span>
                </p>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="dt-responsive table-responsive">
                                <table id="footer-select" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>
                                                Module Name
                                            </th>
                                            <th>
                                                Training Center Name
                                            </th>


                                            <th>
                                                @Html.DisplayNameFor(model => model.Cost)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Venue)
                                            </th>

                                            <th>
                                                Start Date
                                            </th>
                                            <th>
                                                End Date
                                            </th>
                                            <th>Other Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TrainingName)
                                                </td>
                                                @{
                                                    var user = await userManager.FindByIdAsync(item.TrainingCentreId);

                                                    <td>
                                                        @Html.DisplayFor(modelItem => user.CompanyName)
                                                    </td>

                                                }


                                                <th>
                                                    @Html.DisplayFor(model => item.Cost)
                                                </th>
                                                <th>
                                                    @Html.DisplayFor(model => item.Venue)
                                                </th>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TrainingStartDate) :  @Html.DisplayFor(modelItem => item.TrainingStartTime)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TrainingEndDate) : @Html.DisplayFor(modelItem => item.TrainingStartTime)
                                                </td>
                                                <td>

                                                    <a asp-action="DetailsCalender" asp-route-id="@item.Id" title="Check for more details?">Details</a>

                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                Module Name
                                            </th>
                                            <th>
                                                Training Center Name
                                            </th>


                                            <th>
                                                @Html.DisplayNameFor(model => model.Cost)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Venue)
                                            </th>

                                            <th>
                                                Start Date
                                            </th>
                                           
                                            <th>Other Options</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <img src="~/dist/assets/images/logo/footerlogo.png" width="12%" height="7%"></span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Page Container END -->
</div>




