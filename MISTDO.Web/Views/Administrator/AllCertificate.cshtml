@model List<Certificate>
@{
    ViewData["Title"] = "Certificate";
    Layout = "_LayoutAdminDashboard";
    var owners = ViewBag.Owners as List<TraineeApplicationUser>;
}

<div class="page-container">
    @await Html.PartialAsync("_LayoutHeaderAdmin");

    <div class="main-content">
        <div class="col-md-12">
           


        </div>

        <div class="container-fluid">

            <div class="page-title">
                <p>


                    <span style="float:right;"><a asp-controller="Administrator" asp-action="ExportCertificates" align="right" title="Export Certificates to Microsoft Excel file"><i> Export  All Certificates via Excel</i></a></span>
                </p>

                <h4>Certificates</h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="dt-responsive table-responsive">
                                <table id="footer-select" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Full Name</th>
                                            <th>Email</th>

                                            <th>Certificate Number</th>
                                            <th>Certificate Status</th>

                                            <th>Date Generated</th>

                                            <th>Training Center Name</th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        @for (int i = 0; i < Model.Count(); i++)
                                        {

                                            <tr>

                                                <td>

                                                    <div class="mrg-top-15">
                                                        <span class="text-info"><b>@owners[i].FirstName  @owners[i].LastName</b></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="mrg-top-15">
                                                        <span class="text-info"><b>@owners[i].Email</b></span>
                                                    </div>
                                                </td>
                                                <td>

                                                    <span class="text-info"><b>@Model[i].CertNumber</b></span>

                                                </td>
                                                <td>
                                                    @if (DateTime.Now >= @Model[i].DateGenerated.AddYears(2))
                                                    {
                                                        <div class="relative mrg-top-15">
                                                            <span class="status danger"> </span>
                                                            <span class="pdd-left-20">Invalid</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="relative mrg-top-15">
                                                            <span class="status online"> </span>
                                                            <span class="pdd-left-20">@Model[i].CertStatus</span>
                                                        </div>
                                                    }
                                                </td>

                                                <td>

                                                    <span>@Model[i].DateGenerated</span>

                                                </td>

                                                <td>

                                                    <b class="text-dark font-size-16">@Model[i].TrainerOrg</b>

                                                </td>
                                                <td>

                                                    <a asp-action="ViewCertificate" asp-route-TrainingId="@Model[i].TrainingId" asp-route-TraineeId="@owners[i].Id" asp-route-TrainingCentreId="@Model[i].Trainer.Id" asp-route-ModuleId="@Model[i].ModuleId" title="View this Certificate">View Certificate</a>

                                                </td>
                                            </tr>

                                        }

                                    </tbody>
                                  
                                    <tfoot>
                                        <tr>
                                            <th>Full Name</th>
                                            <th>Email</th>

                                            <th>Certificate Number</th>
                                            <th>Certificate Status</th>

                                            <th hidden>Date Generated</th>

                                            <th>Training Center Name</th>

                                            <th hidden>

                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2017 <b class="text-dark">Wragby solutions</b>. All rights reserved.</span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
</div>
