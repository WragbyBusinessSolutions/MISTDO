<!-- Page Container START -->
<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderAdmin")

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <h4>All Trainings</h4>


                <p>

                    <a asp-controller="Administrator" asp-action="AddNewModule" title="Create New Module" class="btn btn-success">Add New Module</a>

                    <span style="float:right;"><a asp-controller="Administrator" asp-action="ExportModules" align="right" title="Export Approved Modules to Microsoft Excel file" class="btn btn-success"><i> Export  All Modules via Excel</i></a></span>
                </p>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                               <table id="dt-opt" class="display" style="width:100%">
                                  
                                    <thead>
                                        <tr>
                                            <th>
                                                Module Name
                                            </th>
                                            <th>
                                                Module Code
                                            </th>
                                            <th>
                                                Module Desciption
                                            </th>
                                            <th>
                                                Module  Registration Cost
                                            </th>
                                            <th>

                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ShortCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Cost)
                                                </td>
                                                <td>
                                                    <a asp-action="EditModule" asp-route-id="@item.Id" title="Edit Module Record" class="btn btn-success">Edit</a>
                                                    | <a asp-action="DeleteModule" asp-route-id="@item.Id" title="Delete Modules Record" class="btn btn-success">Delete</a>


                                                </td>

                                            </tr>

                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>
                                                <input type="text" id="input1" onkeyup="input1f()" placeholder="Module Name" title="Type in a name">
                                            </th>
                                            <th>
                                                <input type="text" id="input2" onkeyup="input2f()" placeholder="Module Code" title="Type in a name">

                                            </th>
                                            <th>
                                                <input type="text" id="input3" onkeyup="input3f()" placeholder="Module Description" title="Type in a name">

                                            </th>
                                            <th>
                                                <input type="text" id="input4" onkeyup="input4f()" placeholder="Module Cost" title="Type in a name">

                                            </th>
                                            <th>

                                            </th>
                                        </tr>
                                    </tfoot>


                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
