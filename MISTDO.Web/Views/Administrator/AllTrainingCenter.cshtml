<!-- Page Container START -->
<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeader");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <h4>All Registered Training Centers</h4>
                <p>


                    <span style="float:right;"><button class="btn btn-success" asp-controller="Administrator" asp-action="ExportCenters" align="right" title="Export Approved Training Providers to Microsoft Excel file"><i> Export  All Training Centres via Excel</i></button></span>
                </p>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                                <table id="dt-opt" class="display">
                                    <thead>
                                        <tr>
                                            <th>
                                                Training Center ID
                                            </th>
                                            <th>
                                                Training Center Name
                                            </th>
                                            <th>
                                                Address
                                            </th>
                                            <th>
                                                City
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                Phone Number
                                            </th>
                                            <th>
                                                OGISP Permit ID
                                            </th>
                                            <th>
                                                Registration Date
                                            </th>
                                            <th>
                                                Others
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CentreName)
                                                </td>
                                                <th>
                                                    @Html.DisplayFor(model => item.CompanyAddress)
                                                </th>
                                                <th>
                                                    @Html.DisplayFor(model => item.City)
                                                </th>
                                                <th>
                                                    @Html.DisplayFor(model => item.Email)
                                                </th>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OGISPId)
                                                </td>
                                                <th>
                                                    @Html.DisplayFor(model => item.DateRegistered)
                                                </th>
                                                <td>
                                                    <a asp-action="DetailsTrainingCenter" asp-route-id="@item.Id" title="Check more details">Details</a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>

                                    <tfoot>
                                        <tr>
                                            <th>
                                                <input type="text" id="input1" onkeyup="input1f()" placeholder="Search " title="Type in a name">
                                            </th>
                                            <th>
                                                <input type="text" id="input2" onkeyup="input2f()" placeholder="Search " title="Type in a name">

                                            </th>
                                            <th>
                                                <input type="text" id="input3" onkeyup="input3f()" placeholder="Search" title="Type in a name">

                                            </th>
                                            <th>
                                                <input type="text" id="input4" onkeyup="input4f()" placeholder="Search" title="Type in a name">

                                            </th>
                                            <th>
                                                <input type="text" id="input5" onkeyup="input5f()" placeholder="Search " title="Type in a name">

                                            </th>
                                            <th>
                                                <input type="text" id="input6" onkeyup="input6f()" placeholder="Search " title="Type in a name">

                                            </th>


                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
