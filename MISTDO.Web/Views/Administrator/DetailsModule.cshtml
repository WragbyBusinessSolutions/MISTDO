@model MISTDO.Web.Models.Training


@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutDashboard";
}

<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />

<!-- Page Container START -->

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderAdmin");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <p>
                    <a asp-action="DetailsTrainees" asp-route-id="@Model.TraineeId" class="btn btn-success">Back</a>
                </p>
                <h4>Training Details </h4>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">

                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-heading border bottom">
                                    <h4 class="card-title">General Info</h4>
                                </div>
                                <div class="card-block">

                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Training Title</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10"> @Html.DisplayFor(model => model.TrainingName)</p>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Training Centre ID</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10"> @ViewBag.CenterID</p>
                                        </div>
                                    </div>


                                    <hr />
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Trainee ID</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10"> @ViewBag.trainee</p>
                                        </div>
                                    </div>


                                    <hr>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Training Start Date</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10"> @Html.DisplayFor(model => model.TrainingStartDate)</p>
                                        </div>
                                    </div>


                                    <hr>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b> Training End Date</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10">@Html.DisplayFor(model => model.TrainingEndDate)</p>
                                        </div>
                                    </div>


                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <img src="~/dist/assets/images/logo/footerlogo.png" width="12%" height="7%"></span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Page Container END -->
</div>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>
