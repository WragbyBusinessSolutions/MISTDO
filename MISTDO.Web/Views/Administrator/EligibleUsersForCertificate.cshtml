@model MISTDO.Web.ViewModels.NewCertificateViewModel

@{
    Layout = "_LayoutAdminDashboard";
    ViewData["Title"] = "Eligible Trainee";
}



<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderAdmin");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <h4>Select The Trainee</h4>
                <p>
                    <a class="btn btn-success" asp-action="Modules">Back</a>
                </p>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-block">
                            <form asp-action="EligibleUsersForCertificate" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @{
                                    var users = ViewBag.users as List<SelectListItem>;

                                }
                                <div class="form-group">
                                    <label class="control-label">
                                        Select Trainee
                                    </label>
                                    <select class="form-control" asp-for="TraineeId" asp-items="users"></select>
                                </div>
                                <div class="form-group">

                                    <Input class="form-control" value="@ViewBag.ModuleId" asp-for="ModuleId" type="hidden" />
                                </div>
                                <div class="form-group">

                                    <Input class="form-control" value="@ViewBag.Trainer" name="trainer" id="trainer" type="hidden" />
                                </div>
                                
                                <div class="form-group">
                                    <input type="submit" value="Next" class="btn btn-success" />
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <img src="~/dist/assets/images/logo/footerlogo.png" width="12%" height="7%"></span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Page Container END -->
</div>


