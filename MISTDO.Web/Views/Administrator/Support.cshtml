@model IEnumerable<MISTDO.Web.Models.Support>
@{
    ViewData["Title"] = "Support";
     Layout = "_LayoutAdminDashboard";
}

<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />

<!-- Page Container START -->

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderAdmin");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <h4> Support Tickets From Training Centres</h4>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                                <table id="dt-opt" class="table table-lg table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Recieved Date & Time
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Subject)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Issue)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Response)
                                            </th>
                                            <th>
                                               Response Time Stamp
                                            </th>


                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <th>
                                                @Html.DisplayFor(model => item.SupportTimeStamp)
                                            </th>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Subject)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Issue)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Response)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupportTimeStamp)
                                            </td>


                                            <td>
                                                <a asp-action="SupportUpdate" asp-route-id="@item.SupportId"  title="Respond to this Ticket">Respond</a>
                                                | <a asp-action="SupportDetails" asp-route-id="@item.SupportId"  title="Check more details on this Ticket">Details</a>


                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <img src="~/dist/assets/images/logo/footerlogo.png" width="12%" height="7%"></span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Page Container END -->
</div>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>



