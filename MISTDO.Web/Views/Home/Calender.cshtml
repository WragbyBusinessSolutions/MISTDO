@model IEnumerable<MISTDO.Web.Models.Calender>
@{
    ViewData["Title"] = "Training Calendar | MISTDO Portal";
    Layout =  "_RegisterPartial";
}




<!-- page plugins css -->
<link rel="stylesheet" href="~/bower_components/fullcalendar/dist/fullcalendar.min.css" />
<link rel="stylesheet" href="~/bower_components/bootstrap-daterangepicker/daterangepicker.css" />
<link rel="stylesheet" href="~/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" />

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeader");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">

        <div class="container-fluid">
            <div class="page-title">
                <h4>Trainings Calender</h4>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                                <table id="dt-opt" class="table table-lg table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Module Name
                                            </th>



                                            <th>
                                                @Html.DisplayNameFor(model => model.Cost)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Venue)
                                            </th>

                                            <th>
                                                Start Date
                                            </th>
                                            <th>
                                                End Date
                                            </th>
                                            <th>Other Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.TrainingEndDate >= DateTime.Today)
                                            {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrainingName)
                                            </td>

                                            <th>
                                                @Html.DisplayFor(model => item.Cost)
                                            </th>
                                            <th>
                                                @Html.DisplayFor(model => item.Venue)
                                            </th>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrainingStartDate) :  @Html.DisplayFor(modelItem => item.TrainingStartTime)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrainingEndDate) : @Html.DisplayFor(modelItem => item.TrainingStartTime)
                                            </td>
                                            <td>

                                                <a asp-action="DetailsCalender" asp-route-id="@item.Id">Details</a>

                                            </td>
                                        </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <img src="~/dist/assets/images/logo/footerlogo.png" width="12%" height="7%"></span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Page Container END -->
</div>

<script src="~/dist/assets/js/apps/calendar.js"></script>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>