@model IEnumerable<MISTDO.Web.Models.Calender>
@{
    ViewData["Title"] = "Information | MISTDO Portal";
    Layout = "_Layout1";
}
@inject UserManager<ApplicationUser> userManager;

<section class="subHeader page"></section>


            <div class="col-lg-12 col-md-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12">

                        <!-- start general questions -->
                        <h3>GENERAL QUESTIONS</h3>
                        <div class="divider"></div>
                        <div class="accordianTab">
                            <div class="accordianLink accord">
                                <p>What is Mistdo?</p>
                            </div>
                            <div class="accordianContent" style="display:block;">
                                <p>
                                    Minimum Industry Safety Training for Downstream Operations (MISTDO) is a basic safety training requirement which must be undertaken by ALL personnel working in the downstream sector of the Nigerian oil and gas industry. It is a major component of the Safety Audit Clearance policy launched by the Department to reduce risks and occurrences of accidents in the downstream sector of the Oil and Gas industry.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>Why Mistdo?</p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    MISTDO seeks to address the high rate of incidents
                                    caused by personnel working in the downstream sector
                                    of the Oil and Gas industry which have resulted in loss of lives,
                                    destruction of infrastructure, downtime in production,
                                    loss of revenue and environmental pollution.
                                    The outcome from previous Investigations reveal
                                    that poor safety knowledge and culture and a dearth of
                                    competent personnel in this sector are major causes of these incidents.
                                    Thus, to eliminate or reduce to the barest minimum future occurrences of
                                    these incidents, the Department in line with its mandate to enforce policies & programs for the safety of people, the environment and Oil and Gas infrastructure, developed MISTDO.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>Who is Mistdo for?</p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    i.	Enforce safety training requirements in the downstream sector.
                                    <br>
                                    ii.	Increase awareness in safety and risks associated with operations in the sector.
                                    <br>
                                    iii.	Improve knowledge and general competence level in the sector.
                                    <br>
                                    iv.	Standardize basic safety training requirements for personnel across the sector.
                                    <br>
                                    v.	Serve as a reference or guide for prospective trainees in basic safety.
                                    <br>
                                    vi.	Provide a platform to effectively monitor and regulate basic safety training activities in the sector.
                                </p>
                            </div>
                        </div><br />
                        <!-- end general questions -->
                        <!-- start question section 2 -->
                        <h3>FAQs</h3>
                        <div class="divider"></div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>Which sector of the Oil & Gas Industry is MISTDO applicable to?</p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    MISTDO applies to operations in the Downstream Sector
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Who is MISTDO for?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    All operations personnel working in Downstream Facilities. These include but are not limited to petroleum retail outlets, depots,
                                    Jetties, petroleum transport, Lube plants, gas retail and processing plants.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>

                                    How do I register as a Trainee?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>

                                    On the home page, click on “Trainee Portal” and select “Register Now”.
                                    You will be asked to provide some personal information. You must have a functional email address before you can register,
                                    as a verification email would be sent to successfully complete your application.

                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How long is the validity of training?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Generally two (2) years, but may vary depending on the course Module.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>

                                    How much does it cost to register a trainee?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Registration on the portal is free. However, registration will only be completed at any
                                    DPR accredited training center by enrolling for a module at a fee.

                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>

                                    Can I apply to a training center different to the one I registered with?


                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>

                                    Yes! Registration is just to get on the MISTDO portal. However, you would be able to see various
                                    training centers and pick the courses which suit your budget, schedule, location etc

                                </p>
                            </div>
                        </div>




                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How do I change training centers?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training Centers cannot be changed once the course has been paid for. However, trainees may liaise with
                                    the trainers and reschedule their trainings to a more convenient time.

                                </p>
                            </div>
                        </div>



                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Can I apply to multiple training centers at the same time?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Yes! Modules which you apply for will be available on your calendar and ideally will display any overlaps
                                </p>
                            </div>
                        </div>


                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Can a company carry out single or bulk registration of her employees for MISTDO training?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Yes. Companies can register single or multiple employees for any MISTDO
                                    modules/courses. However, the certificates will be issued
                                    to individuals as MISTDO training certificate is personalized.

                                </p>
                            </div>
                        </div>


                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Does having MISTDO training & certificate guarantee employment?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    No. All employers have their various employment requirements.
                                    MISTDO training is only a requirement to work in the downstream operations.

                                </p>
                            </div>
                        </div>


                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Can I change Training centres at any time?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training Centers cannot be changed once training has been paid for. Trainings
                                    can only be rescheduled. A full refund of the training
                                    fee can only be obtained when the course is cancelled by the training center.
                                </p>
                            </div>
                        </div>



                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    I forgot my username and password?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    There is a “forgot password” link on the Trainee's Portal Login page
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Can I begin a training in one training center and complete same at another training center?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    No. A Module must be completed at the training center where it was registered.
                                    You can however register to take different modules at different training centers.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    I cannot log on to the portal as a trainee

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Kindly verify your internet connection and your log in details.
                                    You may have put in the wrong user name or password.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How do I verify that my Training Provider is accredited?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    All Training Centers on the MISTDO platform are already accredited on the OGISP platform. However, each training
                                    center has a unique ID Number which can be used for accreditation verification.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Is there an age limit for registration?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Minimum age for hazardous work in Nigeria is eighteen (18) years (Source: Labour Act 2004).
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Can I update my bio and any other data as a trainee?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Bio data change/update for trainees can be done at any MISTDO accredited center.
                                    It is important to have your unique ID No. for making such changes/updates.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Can I sign up for multiple modules?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Yes! Each trainee can enroll to more than one module and it is dependent on location, cost and availability.
                                    Note - Trainees would not be able to enroll modules simultaneously.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Are there any prerequisites to enrolling on the training modules?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    There are no prerequisites for enrolling for any module on the MISTDO platform, except age requirements.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How do I view the timetable for upcoming classes?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    This can be viewed by clicking the calendar tab on the MISTDO portal.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    What are the different types of modules or courses available on MISTDO?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Click to view modules.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How do I pay the module fees?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Payment of module fees is done at any DPR accredited training center of choice.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How is my training certificate issued?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training certificate is issued by training centre where the module was completed.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    When is my training certificate issued?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training certificate is issued at the completion of every module by the accredited training center.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How long is my training certificate valid for?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training certificate is valid for duration of two (2) years.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    What do I do if my training certificate is lost or stolen?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training certificate is reissued once evidence of theft/misplacement is provided and still within its validity.
                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How do I renew my Training certificate?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training certificate can be renewed by registering for a refresher course on or before the expiry of the present certificate.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Are there fees for certificate renewal?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Yes, there are fees for training certificate renewal.
                                    Generally two (2) years, but may vary depending on the course Module.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Is renewal of certificate mandatory?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Yes, renewal of training certificate is mandatory if the holder must continue
                                    work in the Downstream sector of the oil and gas industry

                                </p>
                            </div>
                        </div>


                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How do I register as a Training Provider?

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Training Providers are required to register and apply for MISTDO Permit listed under Specialized Category on the OGISP Portal.
                                    If permit is granted, training providers may log on to MISTDO portal with the permit number.

                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    How much does it cost to register as a training provider on MISTDO?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    N250, 000:00 for MISTDO Permit (OGISP).

                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    What are the requirements needed to be a Training Provider?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Download the requirements.

                                    Note: Accreditation assessment shall be conducted, and only qualified
                                    training centers shall be accredited to offer trainings in line with standardized
                                    requirements. Thereafter, the same permitting/accreditation process shall apply annually.

                                </p>
                            </div>
                        </div>

                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Are there renewal fees for Training Providers?
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Yes. Accreditation for training providers is valid for one (1) year and a fee is applicable for renewal.

                                </p>
                            </div>
                        </div>

                        <br />
                        <!-- end question section 2 -->
                        <!-- start quetion section 3 -->
                        <h3>
                            MISTDO TRAINING PROVIDER's REQUIREMENTS
                        </h3>
                        <div class="divider"></div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    A.  OGISP Requirements
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>
                                    Oil and Gas Industry Service Permit (OGISP) basic documentation requirements.
                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    B. Training Facility Requirements
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>

                                <p class="card-text text-justify">
                                    •	Be fully fenced to ensure safety of personnel.
                                </p>
                                <p class="card-text text-justify">
                                    •	Be aesthetically-pleasing and accessible.
                                </p>
                                <p class="card-text text-justify">
                                    •	Possess a signage at a visible location.
                                </p>
                                <p class="card-text text-justify">
                                    •	Availability of Computers/Library/Offices.
                                </p>
                                <p class="card-text text-justify">
                                    •	Have classroom(s) with minimum capacity of sixteen (16) trainees, furnished with tables and chairs, adequate ventilation, adequate lighting, audio-visual capabilities and internet access.
                                </p>
                                <p class="card-text text-justify">
                                    •	Have designated areas for hands-on practical clearly delineated.
                                </p>
                                <p class="card-text text-justify">
                                    •	Have medical personnel (doctors, nurses etc) on ground and functional medical equipment (first aid kits, etc.)
                                </p>
                                <p class="card-text text-justify">
                                    •	Possess uninterrupted power supply
                                </p>
                                <p class="card-text text-justify">
                                    •	Possess monitoring and surveillance systems such as CCTV etc.
                                </p>
                                <p class="card-text text-justify">
                                    •	Have a clean and pest-free eatery/canteen with potable water supply.
                                </p>
                                <p class="card-text text-justify">
                                    •	Have public convenience
                                </p>
                                <p class="card-text text-justify">
                                    •	Possess simulation equipment as applicable
                                </p>
                                <p class="card-text text-justify">
                                    •	Have other equipment that may be determined by the DPR from time to time
                                </p>




                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    C.	The Management System should
                                </p>
                            </div>
                            <div class="accordianContent">
                                <p><p class="card-text text-justify">
                                    •	Have a clearly defined organogram
                                </p>
                                <p class="card-text text-justify">
                                    •	Have a Management commitment,
                                </p>
                                <p class="card-text text-justify">
                                    •	Have Third party certification/accreditation


                                </p>
                                <p class="card-text text-justify">
                                    •	Have Trainees and staff feedback system
                                    •	Have clearly defined emergency procedures and emergency response systems

                                </p>
                                <p class="card-text text-justify">
                                    •	Have document/data management and control policy

                                </p>
                                <p class="card-text text-justify">
                                    •	Have inspection and maintenance policy/procedure
                                </p>

                                </p>
                            </div>
                        </div>
                        <div class="accordianTab">
                            <div class="accordianLink">
                                <p>
                                    Instructions for Online Registration

                                </p>
                            </div>
                            <div class="accordianContent">
                                <p>

                                <p class="card-text text-justify">
                                    i. Click on ‘Trainee Portal’ button on Home page
                                </p>
                                <p class="card-text text-justify">
                                    ii.	Click on ‘Register’
                                </p>
                                <p class="card-text text-justify">
                                    iii. Complete the online form with bio and other required data
                                </p>
                                <p class="card-text text-justify">
                                    iv.	 Complete the registration process with biometrics capturing by going to any of the DPR accredited training centers of your choice listed on the website
                                </p>
                                <hr />
                                <h6>  As a Training Provider</h6>

                                <p class="card-text text-justify">
                                    i.	Go to the DPR Oil and Gas Industry Service Permit (OGISP) portal
                                </p>
                                <p class="card-text text-justify">
                                    ii.	 Apply for MISTDO Permit listed under the Specialized Category in line with OGISP requirements
                                </p>
                                <p class="card-text text-justify">
                                    iii. Upon the receipt of MISTDO OGISP Permit, Click on ‘Training Provider’s Portal’ button on Home page
                                </p>
                                <p class="card-text text-justify">
                                    iv.	 	Click on ‘Register’
                                </p>
                                <p class="card-text text-justify">
                                    v.	Enter OGISP Permit Number and proceed with the step by step registration.
                                </p>

                                </p>
                            </div>
                        </div>

                        <!-- end question section 3 -->

                    </div><!-- col -->
                </div><!-- end row -->
            </div><!-- end col -->






    




@section Scripts {
    <script type="text/JavaScript">
        //accordian
        $('.accordianTab').click(function () {
            var display = $(this).find('.accordianContent').css('display');

            $(this).find('.accordianContent').slideToggle();

            if (display == 'none') {
                $(this).find('.accordianLink').css('background-image', 'url(../img/icon-minus.png)');
            }
            else if (display == 'block') {
                $(this).find('.accordianLink').css('background-image', 'url(../img/icon-plus.png)');
            }

        });
    </script>

}



