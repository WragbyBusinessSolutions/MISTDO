}
<style>
    /* Style the buttons */
    .nav-item {
        border: none;
        outline: none;
        background-color: white;
        cursor: pointer;
    }

        /* Style the active class, and buttons on mouse-over */
        .nav-item a:hover {
            background-color: forestgreen;
            color: white;
        }

    .side-nav-menu > .active > a,
    .side-nav-menu > .active > a:hover,
    .side-nav-menu > .active > a:focus {
        background-color: #7dc290;
    }
</style>
