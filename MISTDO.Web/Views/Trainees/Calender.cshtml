<!-- Page Container START -->

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderTrainee");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">

        @inject UserManager<ApplicationUser> usermanager;
        <div class="container-fluid">
            <div class="page-title">
                <h4>Trainings Calender</h4>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                                <table id="dt-opt" class="table table-lg table-hover" style="font-size:small;">
                                    
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="text" id="input1" onkeyup="input1f()" placeholder="Module Name">
                                            </th>
                                            <th>
                                                <input type="text" id="input2" onkeyup="input2f()" placeholder=" Centre Name">

                                            </th>
                                            <th>
                                                <input type="text" id="input3" onkeyup="input3f()" placeholder="Cost">

                                            </th>
                                            <th>
                                                <input type="text" id="input4" onkeyup="input4f()" placeholder="State">

                                            </th>
                                            <th>
                                                <input type="text" id="input5" onkeyup="input5f()" placeholder="Start Date">

                                            </th>
                                            <th>
                                                <input type="text" id="input6" onkeyup="input6f()" placeholder="End Date">

                                            </th>

                                            <th>

                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            var centername = await usermanager.FindByIdAsync(item.TrainingCentreId);

                                            if (item.TrainingEndDate >= DateTime.Today)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TrainingName)
                                                    </td>
                                                    <td>
                                                        @if (centername == null)
                                                        {
                                                            string jas = "jadel company";
                                                            @jas
                                                        }
                                                        else
                                                        {

                                                            @centername.CompanyName
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => item.Cost)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(model => item.Venue)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TrainingStartDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TrainingEndDate)
                                                    </td>
                                                    <td>

                                                        <a asp-action="DetailsCalender" asp-route-id="@item.Id" class="btn btn-success">Details</a>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Wrapper END -->
    <!-- Footer START -->
    @await Html.PartialAsync("_Footer")
    <!-- Footer END -->
    <!-- Page Container END -->
</div>
