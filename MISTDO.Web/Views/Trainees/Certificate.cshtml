@model List<Certificate>
@{
    ViewData["Title"] = "Certificate";
    Layout = "_LayoutTraineeDashboard";
    var owners = ViewBag.Owners as List<TraineeApplicationUser>;
    var modules = ViewBag.modulename as Modules;
    
}
@inject UserManager<TraineeApplicationUser> userManager;
<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />
<div class="page-container">
    @await Html.PartialAsync("_LayoutHeaderTrainee");

    <div class="main-content">
        @{
            var user = await userManager.GetUserAsync(User);


        }
        <div class="col-md-12">
            
        </div>
        <div class="container-fluid">
            <div class="page-title">
                <h4>Certificates</h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                                <table id="dt-opt" class="table table-lg table-hover">
                                    <thead>
                                        <tr>
                                            <th>Full Name</th>
                                            <th>Email</th>
                                            

                                            <th>Certificate Number</th>
                                            <th>Certificate Status</th>

                                            <th>Date Generated</th>

                                            <th>Training Center Name</th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count(); i++)
                                        {
                                            if (@owners[i].Email == user.Email)
                                            {
                                        <tr>

                                            <td>

                                                <div class="mrg-top-15">
                                                    <span class="text-info"><b>@owners[i].FirstName  @owners[i].LastName</b></span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="mrg-top-15">
                                                    <span class="text-info"><b>@owners[i].Email</b></span>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="mrg-top-15">
                                                    <span class="text-info"><b>@Model[i].CertNumber</b></span>
                                                </div>
                                            </td>
                                           

                                            <td>
                                                @if (DateTime.Now >= @Model[i].DateGenerated.AddYears(2))
                                                {
                                                    <div class="relative mrg-top-15">
                                                        <span class="status danger"> </span>
                                                        <span class="pdd-left-20">Invalid</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="relative mrg-top-15">
                                                        <span class="status online"> </span>
                                                        <span class="pdd-left-20">@Model[i].CertStatus</span>
                                                    </div>
                                                }
                                            </td>

                                            <td>
                                                <div class="mrg-top-15">
                                                    <span>@Model[i].DateGenerated</span>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="mrg-top-15">
                                                    <b class="text-dark font-size-16">@Model[i].TrainerOrg</b>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="mrg-top-10">


                                                    <a asp-action="ViewCertificate" asp-route-TrainingId="@Model[i].TrainingId" asp-route-TraineeId="@owners[i].Id" asp-route-TrainingCentreId="@Model[i].Trainer.Id" asp-route-ModuleId="@Model[i].ModuleId">View Certificate</a>
                                                </div>
                                            </td>
                                        </tr>
                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <b class="text-dark">Department of Petroleum Resources</b>. All rights reserved.</span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
</div>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>