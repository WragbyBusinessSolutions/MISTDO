@model LoginViewModel
@{
    ViewData["Title"] = "Trainer Portal | MISTDO Portal";
}
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<style>
    html, body {
        height: 100%;
        background-image: url('../dist/assets/images/others/2.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        /*background-color: #82a43a;*/
    }

    #form {
        background-color: #ffffff;
        border-radius: 25px;
        border: 2px solid #ffffff;
        padding: 20px;
    }

    .outer-wrapper {
        display: table;
        width: 100%;
        height: 100%;
    }

    .inner-wrapper {
        display: table-cell;
        vertical-align: middle;
        padding: 15px;
    }

    .login-btn {
        position: fixed;
        top: 15px;
        right: 15px;
    }
</style>

<!-- Optional theme
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">-->
<a class="btn btn-default login-btn" asp-controller="Home" asp-action="Index">Home</a>
<section id="loginform" class="outer-wrapper">

    <div class="inner-wrapper">
        <div class="container">
            <div class="row">
                @{
                  string cert="";
                }
                <div id="form" class="col-sm-4 col-sm-offset-4">
                    <h2 class="text-center" style="color:darkgreen"><strong>Account Deactivated</strong></h2>
                    <br />
                   
                        
                        <div class="form-group" align="center">
                           
                                <h4><strong style="color:red">@ViewBag.Message </strong></h4>
                           
                        </div>
                        

                        <button type="submit" class="btn btn-success">Submit</button>
                        <div class="form-group">
                            <h4><i><strong>You can register  <a asp-action="RegisterNow" asp-controller="Trainees">Here</a> to create a new account or go to a training provider to onboard you.</strong></i></h4>
                        </div>
                  
                </div>
            </div>
        </div>
    </div>

</section>




