                                                <img class="mrg-top-30" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.ImageUpload))" alt="Take a new Passport" height="150" width="180" onload="move()">

                                            </div>

                                        </div>
                                    }
                                    else
                                    {
                                        <div class="widget-profile-1 card">
                                            <div class="profile border bottom">
                                                <img class="mrg-top-30" src="~/templates/avatar.png" alt="Take a new Passport" height="150" width="180">
                                                <p>
                                                    <h4 class="mrg-top-20 no-mrg-btm text-semibold"> <a asp-controller="Administrator" asp-action="AllTrainingCenter">Upload your Picture and Update your Profile  </a> </h4>
                                                </p>
                                            </div>

                                        </div>
                                    }




                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-heading border bottom">
                                    @if (Model.FirstFinger != null && Model.MiddleFinger != null)
                                    {
                                        <div class="widget-profile-1 card">
                                            <div class="profile border bottom">
                                                <p>
                                                    <center>
                                                        <a class="btn btn-success" href="#" style="min-width:40%;  background-color: #0b9242; color: white;">STEP 3</a>| <a class="btn btn-success" style="min-width:40%;" >Biometric Capture</a>
                                                    </center>
                                                </p>
