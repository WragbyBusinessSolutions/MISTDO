                                                        @*<img class="mrg-top-30" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.ImageUpload))" alt="Take a new Passport" height="150" width="180">*@

                                                    </span>
                                                    <h4 class="mrg-top-20 no-mrg-btm text-semibold"> Profile Completed  </h4>
                                                </p>
                                            </div>

                                        </div>

                                    }
                                    else
                                    {
                                        <div class="widget-profile-1 card">
                                            <div class="profile border bottom">
                                                <p>
                                                    <center>
                                                        <a class="btn btn-success" href="#" style="min-width:40%;  background-color: #0b9242; color: white;">STEP 3</a>| <a class="btn btn-success" style="min-width:40%;" >Biometric Capture</a>
                                                    </center>
                                                </p>
                                                <p> <label class="mrg-top-30">  Click link below to check for Training Provider approved by DPR for Biometric Capturing </label></p>
                                                <p> <a class="btn btn-success" style="min-width:40%;" asp-controller="Trainees" asp-action="TrainingCenters" target="_blank">list of approved Training Providers  </a></p>
                                                @*<img class="mrg-top-30" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.ImageUpload))" alt="Take a new Passport" height="150" width="180">*@

                                            </div>

                                        </div>
                                    }




