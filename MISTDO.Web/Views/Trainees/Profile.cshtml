@model MISTDO.Web.Models.TraineeApplicationUser
@{
    ViewData["Title"] = "Profile";
    Layout = "_LayoutTraineeDashboard";
}



<!-- Page Container START -->
<style>
    #myProgress {
        width: 100%;
        background-color: #ddd;
     
    }
        

    #myBar {
        width: 1%;
        height: 30px;
        background-color: #0b9242;
       
    }

</style>
<script>
    function demo() {
        var elem = document.getElementById("myBar");
        var width = 1;
        var id = setInterval(frame, 10);
        function frame() {
            if (width >= 100) {
                clearInterval(id);
            } else {
                width++;
                elem.style.width = width - 60 + '%';
               
               
            }
        }
    }
    function move() {
        var elem = document.getElementById("myBar");
        var width = 1;
        var id = setInterval(frame, 10);
        function frame() {
            if (width >= 100) {
                clearInterval(id);
            } else {
                width++;
                elem.style.width = width - 40 + '%';
                elem.style.content = width - 40 + '%';
               
            
            }
        }
    }
    function bio() {
        var elem = document.getElementById("myBar");
        var width = 1;
        var id = setInterval(frame, 10);
        function frame() {
            if (width >= 100) {
                clearInterval(id);
            } else {
                width++;
                elem.style.width = width  + '%';
                elem.style.content = width  + '%';
            }
        }
    }
</script>


<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeaderTrainee");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <span style="float:right;"><button class="btn btn-success" align="right" title="Hide Account status" onclick="myFunction()"><i> Hide/Show Account Status</i></button></span>
            <div id="myProgress">

                <h4>Reigistration Status </h4>
                @*<div class="alert alert-success">
                <strong>Success!</strong> This alert box could indicate a successful or positive action.
            </div>*@
                <div id="myBar"></div>
            </div>
            <div class="page-title">
                <h4>Account Setting</h4>

