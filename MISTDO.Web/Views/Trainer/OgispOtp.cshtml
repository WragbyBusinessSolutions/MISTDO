@model LoginViewModel
@{
    ViewData["Title"] = "Trainer Portal | MISTDO Portal";
}
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<style>
    html, body {
        height: 100%;
        background-image: url('../dist/assets/images/others/2.jpg');
        background-repeat: no-repeat;
        background-size:cover;
        /*background-color: #82a43a;*/
    }
    #form {
        background-color: #ffffff;
        border-radius: 25px;
        border: 2px solid #ffffff;
        padding: 20px;
     
    }
    .outer-wrapper {
        display: table;
        width: 100%;
        height: 100%;
    }

    .inner-wrapper {
        display: table-cell;
        vertical-align: middle;
        padding: 15px;
    }

    .login-btn {
        position: fixed;
        top: 15px;
        right: 15px;
    }
</style>

<!-- Optional theme
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">-->
<a class="btn btn-default login-btn" asp-controller="Home" asp-action="Index">Home</a>
<section id="loginform" class="outer-wrapper">

    <div class="inner-wrapper">
        <div class="container">
            <div class="row">
                <div id="form" class="col-sm-4 col-sm-offset-4">
                    <h2 class="text-center" style="color:darkgreen"><strong>OGISP Authentication</strong></h2>
                    <br />
                    <form asp-action="OtpCheck" asp-controller="Trainer" enctype="multipart/form-data">

                        <div class="form-group">
                            <h5><strong>Please check your Email provided on OGISP registration for your One Time Password and enter it below</strong></h5>

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">O.T.P *</label>
                            <input type="password" class="form-control" name="otp" id="otp" placeholder="One Time Password">
                        </div>

                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>
