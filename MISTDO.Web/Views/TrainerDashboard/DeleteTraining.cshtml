@model MISTDO.Web.Models.Calender

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutDashboard";
}
@inject UserManager<ApplicationUser> userManager;
<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />

<!-- Page Container START -->

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeader");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <p>
                    <a asp-action="Training">Back</a>
                </p>
                <h4>Delete Training </h4>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-heading border bottom">
                            <h4 class="card-title">Training Details </h4>
                        </div>
                        <div class="card-block">
                            <div class="mrg-top-40">
                                <div class="row">
                                    @{
                                        var user = await userManager.GetUserAsync(User);
                                    }
                                    <div class="col-md-8 ml-auto mr-auto">
                                        <form asp-action="DeleteTraining">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="Id" />

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label control-label">Training Name</label>
                                                        <input asp-for="TrainingName" class="form-control" />
                                                        <span asp-validation-for="TrainingName" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">


                                                    <div class="form-group">
                                                        <label class="control-label" hidden> Training Cost</label>
                                                        <input asp-for="Cost" class="form-control" hidden />
                                                        <span asp-validation-for="Cost" class="text-danger"></span>
                                                    </div>

                                                </div>
                                                <div class="col-md-12">


                                                    <div class="form-group">
                                                        <label class="control-label"> Training Venue</label>
                                                        <input asp-for="Venue" class="form-control" />
                                                        <span asp-validation-for="Venue" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">

                                                    <div class="form-group">
                                                        <label class="control-label">Training Start Time</label>
                                                        <input asp-for="TrainingStartTime" class="form-control" />
                                                        <span asp-validation-for="TrainingStartTime" class="text-danger"></span>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">


                                                    <div class="form-group">
                                                        <label class="control-label">Training End Time</label>
                                                        <input asp-for="TrainingEndTime" class="form-control" />
                                                        <span asp-validation-for="TrainingEndTime" class="text-danger"></span>
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="TrainingStartDate" class="control-label"></label>
                                                        <input asp-for="TrainingStartDate" class="form-control" />
                                                        <span asp-validation-for="TrainingStartDate" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="TrainingEndDate" class="control-label"></label>
                                                        <input asp-for="TrainingEndDate" class="form-control" />
                                                        <span asp-validation-for="TrainingEndDate" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">

                                                <div class="col-md-8">
                                                    <div class="text-right mrg-top-5">
                                                        <div class="form-group">
                                                            <button type="submit" class="btn btn-primary">Delete</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    @await Html.PartialAsync("_Footer")
    <!-- Footer END -->
    <!-- Page Container END -->
</div>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>
