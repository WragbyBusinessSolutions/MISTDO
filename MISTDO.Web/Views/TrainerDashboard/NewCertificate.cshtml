@model MISTDO.Web.ViewModels.NewCertificateViewModel
@inject MISTDO.Web.Services.ITrainerService TrainerService
@{
    ViewData["Title"] = "NewCertificate";
    Layout = "_LayoutDashboard";
}



<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeader");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <h4>Create New Certificate</h4>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-block">
                            <form asp-action="NewCertificate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                @{
                                    //var Trainers = await TrainerService.GetAllTrainees();
                                    var trainees = ViewBag.trainees as List<SelectListItem>;

                                }
                                <div class="form-group">
                                    <label class="control-label">
                                        Select the Trainee
                                    </label>
                                    <select class="form-control" asp-for="TraineeId" asp-items="trainees"></select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Next" class="btn btn-default" />
                                </div>
                            </form>
                        </div>



                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Content Wrapper END -->
    <!-- Footer START -->
    @await Html.PartialAsync("_Footer")
    <!-- Footer END -->
    <!-- Page Container END -->
</div>

