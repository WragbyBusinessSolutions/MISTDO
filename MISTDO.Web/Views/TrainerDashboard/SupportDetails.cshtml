@model MISTDO.Web.Models.Support
@{
    ViewData["Title"] = "Support Details";
     Layout = "_LayoutDashboard";
}

<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />

<!-- Page Container START -->

<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeader");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <p>
                    <a asp-action="SupportTrainees" class="btn btn-success">Back</a>
                </p>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">

                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-heading border bottom">
                                    <h4 class="card-title">Support Ticket Details</h4>
                                </div>
                                <div class="card-block">

                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Support Ticket Recieved Date</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10">@Html.DisplayFor(model => model.SupportTimeStamp)</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Subject</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10"> @Html.DisplayFor(model => model.Subject)</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Support Issue</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10">@Html.DisplayFor(model => model.Issue)</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        @if (Model.Response != null)
                                        {
                                            <div class="col-md-3">
                                                <p class="mrg-top-10 text-dark"> <b>Response To Issue Ticket</b></p>
                                            </div>
                                            <div class="col-md-6">
                                                <span class="status online mrg-top-10"></span>
                                                <p class="mrg-top-10">@Html.DisplayFor(model => model.Response)</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <p class="mrg-top-10 text-dark"> <b>Response To Issue Ticket</b></p>
                                            </div>
                                            <div class="col-md-6">
                                                <span class="status danger mrg-top-10"></span>

                                            </div>
                                        }
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="mrg-top-10 text-dark"> <b>Response Date & Time</b></p>
                                        </div>
                                        <div class="col-md-6">
                                            <span class="status online mrg-top-10"></span>
                                            <p class="mrg-top-10">@Html.DisplayFor(model => model.ResponseTimeStamp)</p>
                                        </div>
                                    </div>


                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    @await Html.PartialAsync("_Footer")
    <!-- Footer END -->
    <!-- Page Container END -->
</div>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>



