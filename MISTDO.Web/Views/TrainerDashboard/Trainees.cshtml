@model IEnumerable<MISTDO.Web.Models.TraineeApplicationUser>
@{
    ViewData["Title"] = "Trainee";
    Layout = "_LayoutDashboard";
}

<link rel="stylesheet" href="~/bower_components/datatables/media/css/jquery.dataTables.css" />

<!-- Page Container START -->
@inject UserManager<ApplicationUser> userManager;
<div class="page-container">
    <!-- Header START -->
    @await Html.PartialAsync("_LayoutHeader");

    <!-- Theme Toggle Button END -->
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="page-title">
                <h4>Registered Trainees</h4>
                <p>
                    <span style="float:left;"> <a asp-action="CreateTrainees">Create New  &nbsp;</a></span> | <span> <a asp-action="CompleteTraineeRegistration">Complete Existing Trainee Registration</a></span>

                    <span style="float:right;"><a asp-action="AttachTraineeTraining" align="right">Asign Training for Trainee </a></span>
                </p>



            </div>
            <p>
                

            </p>

            <div class="row">

                @{
                    var user = await userManager.GetUserAsync(User);



                }
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="table-overflow">
                                <table id="dt-opt" class="table table-lg table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                First Name
                                            </th>
                                            <th>
                                                Last Name
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            <th>
                                                Phone Number
                                            </th>
                                            <th>
                                                Company Name
                                            </th>
                                            <th>
                                                Company Address
                                            </th>
                                            <th>
                                                User Address
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FirstName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LastName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CompanyAddress)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UserAddress)
                                                </td>

                                                <td>
                                                    @*<a asp-action="EditTrainees" asp-route-id="@item.Id">Edit</a>*@ |
                                                    <a asp-action="DetailsTrainees" asp-route-id="@item.Id">Details</a> |
                                                    @*<a asp-action="DeleteTrainees" asp-route-id="@item.Id">Delete</a>*@
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="content-footer">
        <div class="footer">
            <div class="copyright">
                <span>Copyright © 2018 <b class="text-dark"> Department of Petroleum Resources</b>. All rights reserved.</span>
                <span class="go-right">
                    <a href="#" class="text-gray mrg-right-15">Term &amp; Conditions</a>
                    <a href="#" class="text-gray">Privacy &amp; Policy</a>
                </span>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Page Container END -->
</div>
<script src="~/dist/assets/js/vendor.js"></script>

<script src="~/dist/assets/js/app.min.js"></script>

<!-- page plugins js -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.js"></script>

<!-- page js -->
<script src="~/dist/assets/js/table/data-table.js"></script>



